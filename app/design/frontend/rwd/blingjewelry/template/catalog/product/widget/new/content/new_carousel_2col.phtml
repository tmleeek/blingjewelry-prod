                            <!-- ADD -->
                            <a href='<?php echo $this->getUrl('ajax/index/quickview',array('product_id'=>$_product->getId()));?>' id='quickview<?php echo $_product->getId()?>' class="button js-btn-quickview" data-pid="<?php echo $_product->getId()?>">Quickview</a> 
                            <!-- END ADD -->
                            */?>
