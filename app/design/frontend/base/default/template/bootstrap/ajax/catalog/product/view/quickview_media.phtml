$addConfig .= 'mouseTriggerEvent: "mousemove",';
$addConfig .= 'disableZoom: "auto",';
$addConfig .= 'hoverIntentDelay: "100",';
$addConfig .= 'touchStartDelay: "250",';


// Convert config to a JS object.
$jsData = "{";
foreach($configVariables as $var) {
    $value = $helper->getConfigData($var);
    if(!is_numeric($value)) $value = "\"".$value."\"";
    $jsData.= under2camel($var).": $value, ";
}

//mmc adding config
$jsData .= $addConfig;

$jsData = rtrim($jsData, ', ')."}";
