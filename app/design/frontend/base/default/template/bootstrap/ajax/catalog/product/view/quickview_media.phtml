function under2camel($str) {
    $regexp = '#_(.)#e';
    return preg_replace($regexp, "strtoupper('\\1')", $str);
}

$configVariables = array(
    "tint_color",
    "tint_opacity",
    "animation_time",
    "zoom_position",
