<config>
    <modules>
        <Amasty_Promo>
            <version>2.0.7</version>
        </Amasty_Promo>
    </modules>

    <global>
        <resources>
            <ampromo_setup>
                <setup>
                    <module>Amasty_Promo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ampromo_setup>

            <ampromo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ampromo_write>

            <ampromo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ampromo_read>
        </resources>

        <models>
            <ampromo>
                <class>Amasty_Promo_Model</class>
            </ampromo>
            <salesrule>
                <rewrite>
                    <quote_discount>Amasty_Promo_Model_SalesRule_Quote_Discount</quote_discount>
                    <rule_condition_product>Amasty_Promo_Model_SalesRule_Rule_Condition_Product</rule_condition_product>
                    <rule_condition_product_subselect>Amasty_Promo_Model_SalesRule_Rule_Condition_Product_Subselect</rule_condition_product_subselect>
                    <rule_condition_product_combine>Amasty_Promo_Model_SalesRule_Rule_Condition_Product_Combine</rule_condition_product_combine>
                </rewrite>
            </salesrule>
            <sales>
                <rewrite>
                    <quote_item>Amasty_Promo_Model_Sales_Quote_Item</quote_item>
                    <quote_address>Amasty_Promo_Model_Sales_Quote_Address</quote_address>
                </rewrite>
            </sales>
        </models>

        <blocks>
            <ampromo>
                <class>Amasty_Promo_Block</class>
            </ampromo>
            <adminhtml>
                <rewrite>
                    <promo_quote_edit>Amasty_Promo_Block_Adminhtml_Promo_Quote_Edit</promo_quote_edit>
                </rewrite>
            </adminhtml>
        </blocks>

        <helpers>
            <ampromo>
                <class>Amasty_Promo_Helper</class>
            </ampromo>
        </helpers>
    </global>

    <frontend>
        <routers>
            <ampromo>
                <use>standard</use>
                <args>
                    <module>Amasty_Promo</module>
                    <frontName>ampromo</frontName>
                </args>
            </ampromo>
        </routers>
        <translate>
            <modules>
                <Amasty_Promo>
                    <files>
                        <default>Amasty_Promo.csv</default>
                    </files>
                </Amasty_Promo>
            </modules>
        </translate>
        <layout>
            <updates>
                <ampromo>
                    <file>amasty/ampromo/ampromo.xml</file>
                </ampromo>
            </updates>
        </layout>
        <events>
            <salesrule_validator_process>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>handleValidation</method>
                    </amasty_promo_model_observer>
                </observers>
            </salesrule_validator_process>

            <sales_quote_collect_totals_after>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onCollectTotalsAfter</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_quote_collect_totals_after>

            <sales_quote_collect_totals_before>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onCollectTotalsBefore</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_quote_collect_totals_before>

            <sales_quote_address_collect_totals_after>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onAddressCollectTotalsAfter</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_quote_address_collect_totals_after>

            <sales_quote_remove_item>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onQuoteRemoveItem</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_quote_remove_item>

            <sales_order_place_after>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>decrementUsageAfterPlace</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_order_place_after>
            <sales_order_place_before>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onOrderPlaceBefore</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_order_place_before>
            <sales_quote_product_add_after>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onProductAddAfter</method>
                    </amasty_promo_model_observer>
                </observers>
            </sales_quote_product_add_after>
            <controller_action_predispatch_checkout_cart_updateItemOptions>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>onCartItemUpdateBefore</method>
                    </amasty_promo_model_observer>
                </observers>
            </controller_action_predispatch_checkout_cart_updateItemOptions>
            <checkout_submit_all_after>
                <observers>
                    <amasty_promo_model_registry>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Registry</class>
                        <method>reset</method>
                    </amasty_promo_model_registry>
                </observers>
            </checkout_submit_all_after>
        </events>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Amasty_Promo>
                    <files>
                        <default>Amasty_Promo.csv</default>
                    </files>
                </Amasty_Promo>
            </modules>
        </translate>

        <events>
            <adminhtml_block_salesrule_actions_prepareform>
                <observers>
                    <amasty_promo_model_observer>
                        <type>singleton</type>
                        <class>Amasty_Promo_Model_Observer</class>
                        <method>handleFormCreation</method>
                    </amasty_promo_model_observer>
                </observers>
            </adminhtml_block_salesrule_actions_prepareform>
        </events>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ampromo>
                                            <title>Auto Add Promo Items</title>
                                        </ampromo>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>


    <default>
        <ampromo>
            <general>
                <prefix>FREE - </prefix>
                <message>FREE!</message>
                <add_message><![CDATA[Select your <a href="#">FREE GIFT</a>!]]></add_message>
                <auto_add>1</auto_add>
                <free_shipping>1</free_shipping>
                <display_notification>0</display_notification>
                <notification_text><![CDATA[You did not add any gift products to the cart. <a href="{url checkout/cart}#choose-gift">Check your available gifts!</a>]]></notification_text>
            </general>
            <messages>
                <errors>1</errors>
                <success>1</success>
            </messages>
        </ampromo>
    </default>
</config>