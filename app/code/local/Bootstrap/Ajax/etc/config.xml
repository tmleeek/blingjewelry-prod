<?xml version="1.0"?>
<config>
    <modules>
        <Bootstrap_Ajax>
            <version>0.1.0</version>
        </Bootstrap_Ajax>
    </modules>
    <frontend>
        <routers>
            <ajax>
                <use>standard</use>
                <args>
                    <module>Bootstrap_Ajax</module>
                    <frontName>ajax</frontName>
                </args>
            </ajax>
        </routers>
        <layout>
            <updates>
                <ajax>
                    <file>bootstrap/ajax.xml</file>
                </ajax>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
        	<checkout>
        		<rewrite>
        			<cart_sidebar>Bootstrap_Ajax_Block_Cart_Sidebar</cart_sidebar>
        		</rewrite>
        	</checkout>
            <ajax>
                <class>Bootstrap_Ajax_Block</class>
            </ajax>
        </blocks>
        <helpers>
            <ajax>
                <class>Bootstrap_Ajax_Helper</class>
            </ajax>
        </helpers>
    </global>
</config>